<% image_title = t('photo.photo'), " #{render partial: 'users/user', object: photo.user}", current_user_can_edit?(photo) ? link_to(
      fa_icon('trash'), event_photo_path(photo.event, photo), method: :delete, data: {confirm: t('photo.confirm')}) : '' %>
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: {
        toggle: 'lightbox', fa_icon: 'trash', title: "Добавил #{render partial: 'users/user', object: photo.user}", gallery: 'event-photos'
    } %>
